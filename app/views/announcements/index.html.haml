.left-box
	.xob{style: 'padding : 0px 15px 2px;'}
		.course_info.panel-body
			.row.c_title
				.course_code= @course.code
				.course_name=link_to @course.name, @course, style: "color: black"
			.row
				.course_sem
					Semester
					= @course.semester
					Class
					= @course.year
		.well.header
			%h1
				%b Announcements
			%hr
		- if !@announcements.blank?
			.container.announcement
				- @announcements.includes(:owner).each do |announcement|
					.row.box
						%h2= announcement.description
						%div
							%font= (distance_of_time_in_words_to_now announcement.updated_at) + ' ago by '
							=link_to announcement.owner.name, announcement.owner