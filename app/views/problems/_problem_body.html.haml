%table{width: "100%"}
	%tr
		%td{width: "20%", style: "vertical-align:top;"}
			%div{style: "margin-left:1em;"}
				%b Memory Contents:
				#memory.fixed-dimensions
					%table.table.table-striped.table-bordered.table-condensed.table-hover{border: "3"}
